#ejercicio5
print("hola mundo")
nombre=input("ingrese su nombre: ")
print("hola mundo "+nombre)
horas=float(input("introduce tus horas de trabajo: "))
coste=float(input("introduce lo que cobras por hora: "))
paga=horas*coste
print(nombre+ " tu paga es ",paga)

#ejercicio7
